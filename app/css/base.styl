    text-align: left;
  }
  .email {
    text-align: center;
    .input {
      display: inline-block;
      padding-right: 10px;
      width: 80%;
    }
    input[type=text] {
      transition: all .2s ease;
      background-color: light-grey;
      box-shadow: 0 0 0 1px light-grey;
      color: header-panel-font-color;
      display: block;
      height: 4em;
      padding-left: 15px;
      padding-right: 15px;
      &:hover {
        box-shadow: 0 0 0 1px white;
      }
      &:focus {
        background-color: white;
        box-shadow: 0 0 0 1px white;
        color: blue;
      }
    }
    .button {
      display: inline-block;
      width: 20%;
      margin: 0;
    }
  }

  @media medium-up {
    h1 {
      font-size: 136px;
    }
  }
