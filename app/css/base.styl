    font-weight: 900;
    line-height: 1.6;
    text-transform: uppercase;
  }
  h1, p { color: header-font-color; }

  p {
    margin-bottom: 20px;
  }

  .panel {
    background: rgba(header-panel-background-color, .65);
    h1, h2, h3, h4, h5, p { color: header-panel-font-color; }
    padding: 60px 100px;
    margin-bottom: -120px;
  }

  form * {
