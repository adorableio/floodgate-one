

@viewport {
  width: extend-to-zoom 980px;
  min-zoom: 0.25;
  max-zoom: 5;
}

html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;
}

body {
  background-color: blue;
}

header {
  background-color: blue;
  padding-top: 60px;
  padding-bottom: 60px;
  position: relative;
  &.show {
    .scuba-dude {
      transform: translateX(0) scale(1);
      opacity: 1;
    }
  }
  h1 {
    text-align: center;

    span { display: none; }
    img {
      max-width: 960px;
    }
  }
  h2 { color: yellow; }
  p {
    color: darkest-blue;
    // text-shadow: 0 1px 0 dark-blue;
  }

  .row {
    margin-bottom: 60px;
  }

  .scuba-dude {
    transition: all 1s ease;
    max-height: 320px;
    tranform-origin: 50% 400px;
    z-index: 3;
    position: relative;
    top: -40px;
    transform: translateX(-20px) scale(.9);
    opacity: 0;

    svg {
      animation: scuba-rock 8s linear alternate infinite;
      #dude {
        tranform-origin: 50% 400px;
        animation: scuba-bob 2s ease alternate infinite;
      }

      #SUIT,
      #HANDS {
        > * { fill: yellow; }
      }

      #waves-front {
        transform: translate(-15px, 0);
        animation: scuba-drift 3s ease alternate infinite;
        width: 80%;
        left: 50%;
        margin-left: -30%;
        max-height: 28px;
        position: absolute;
        z-index: 10;
        top: 100%;
        path {
          transform: translate(0, -5px);
          animation: scuba-bob-small 2s 1s ease alternate infinite;
        }
      }

      #waves-back {
        transform: translate(-5px, 0);
        animation: scuba-drift 2s .3s ease alternate infinite;
        width: 100%;
        max-height: 28px;
        position: absolute;
        z-index: 1;
        bottom: 120px;
        path {
          transform: translate(0, -10px);
          animation: scuba-bob 3s .7s ease alternate infinite;
        }
      }

    }
  }
}

section {

  padding-top: 60px;
  padding-bottom: 60px;

  &.fader {
    transition: opacity .4s ease-in;
    opacity: 0;
    padding-bottom: 60px;
    padding-top: 60px;

    &.activated {
      transition: opacity .2s ease-in .3s;
      opacity: 1;
    }
  }
  &.white {
    background-color: white;
    h2 { color: black; }
    p { color: black; }
  }

  &.off-white { background-color: off-white; }
}

main {

  background: #60b6c0;
  background: -moz-linear-gradient(top, dark-blue 0%, blue 45%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,dark-blue), color-stop(45%,blue));
  background: -webkit-linear-gradient(top, dark-blue 0%, blue 45%);
  background: -o-linear-gradient(top, dark-blue 0%, blue 45%);
  background: linear-gradient(to bottom, dark-blue 0%, blue 45%);
  position: relative;
  > * {
    position: relative;
    z-index: 3;
  }


  .gate {
    transition: width .4s ease-in .4s;
    background-color: off-white;
    box-shadow: 0 -20px 0 white;
    content: '';
    top: 0;
    width: 15%;
    height: 100%;
    position: absolute;
    z-index: 2;

    &.left { left: 0; }
    &.right { right: 0; }

    &.activated {
      transition: width .3s ease-in;
      width: 50%;
    }

  }

}

footer {
  position: relative;
  font-size: 12px;
  padding-top: 26px;
  li, p { color: white; }
  a {
    color: white;
    text-decoration: none;

    &:hover {
      color: yellow;
    }
  }

  .adorable-logo {
    position: absolute;
    right: 0;
    top: -6px;
    width: 120px;
    max-height: 45px;
    span { display: none; }
    svg {
      #letters { fill: yellow; }
    }
  }
}

.waterfall {
  width: 1000px;
  height: 1688px;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -500px;
  z-index: 1;
  svg {
    line {
      stroke: blue;
      stroke-width: 8;
    }
    #col1 { animation: waterfall 2s linear infinite; }
    #col2 { animation: waterfall 3s linear infinite; }
    #col3 { animation: waterfall 2s linear infinite; }
    #col4 { animation: waterfall 3s linear infinite; }
    #col5 { animation: waterfall 2s linear infinite; }
    #col6 { animation: waterfall 3s linear infinite; }
    #col7 { animation: waterfall 4s linear infinite; }
    #col8 { animation: waterfall 2s linear infinite; }
  }
}