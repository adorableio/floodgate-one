

@viewport {
  width: extend-to-zoom 980px;
  min-zoom: 0.25;
  max-zoom: 5;
}

html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;
}

section {
  padding-top: 60px;
  padding-bottom: 60px;
  margin-bottom: column-gutter;
}

body {
  background-color: dark-blue;
}

header {
  background-color: blue;
  padding-top: 60px;
  padding-bottom: 60px;
  position: relative;
  h1 {
    text-align: center;
    span { display: none; }
    img {
      max-width: 960px;
    }
  }
  h2 {
    color: yellow;
  }

  .row {
    margin-bottom: 60px;
  }

  .scuba-dude {
    max-height: 320px;
    tranform-origin: 50% 400px;
    z-index: 3;
    position: relative;
    top: -40px;
    // animation: scuba-drift 4s ease alternate infinite;

    svg {
      animation: scuba-rock 8s linear alternate infinite;
      #dude {
        tranform-origin: 50% 400px;
        animation: scuba-bob 2s ease alternate infinite;
      }

      #SUIT,
      #HANDS {
        > * { fill: yellow; }
      }

      #waves-front {
        transform: translate(-15px, 0);
        animation: scuba-drift 3s ease alternate infinite;
        width: 80%;
        left: 50%;
        margin-left: -30%;
        max-height: 28px;
        position: absolute;
        z-index: 10;
        top: 100%;
        path {
          transform: translate(0, -5px);
          animation: scuba-bob-small 2s 1s ease alternate infinite;
        }
      }

      #waves-back {
        transform: translate(-5px, 0);
        animation: scuba-drift 2s .3s ease alternate infinite;
        width: 100%;
        max-height: 28px;
        position: absolute;
        z-index: 1;
        bottom: 120px;
        path {
          transform: translate(0, -10px);
          animation: scuba-bob 3s .7s ease alternate infinite;
        }
      }

    }
  }
}

main {
  position: relative;
  > * {
    position: relative;
    z-index: 3;
  }


  section {

    &.fader {
      transition: opacity .4s ease-in;
      opacity: 0;
      padding-bottom: 60px;
      padding-top: 60px;

      &.activated {

        transition: opacity .4s ease-in .4s;
        opacity: 1;
      }
    }
    &.light {
      background-color: white;
      h2 { color: black; }
      p { color: black; }
    }
  }


  .gate {
    transition: width .4s ease-in .4s;
    background-color: off-white;
    box-shadow: 0 -20px 0 white;
    content: '';
    top: 0;
    width: 15%;
    height: 100%;
    position: absolute;
    z-index: 2;

    &.left { left: 0; }
    &.right { right: 0; }

    &.activated {
      transition: width .4s ease-in;
      width: 50%;
    }

  }

}



.waterfall {
  width: 1000px;
  height: 1688px;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -500px;
  z-index: 1;
  svg {
    line {
      stroke: blue;
      stroke-width: 8;
    }
    #col1 { animation: waterfall 2s linear infinite; }
    #col2 { animation: waterfall 3s linear infinite; }
    #col3 { animation: waterfall 2s linear infinite; }
    #col4 { animation: waterfall 3s linear infinite; }
    #col5 { animation: waterfall 2s linear infinite; }
    #col6 { animation: waterfall 3s linear infinite; }
    #col7 { animation: waterfall 4s linear infinite; }
    #col8 { animation: waterfall 2s linear infinite; }
  }
}