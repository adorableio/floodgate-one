  background: none;
  border: none;
  color: white;
  font-size: 16px;
  margin: 0;
  padding: 0;
  height: 36px;
  width: 100%;
}

input[type=range] {
  transition: all .6s ease;
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  border: none;
  background-color: rgba(light-grey, .35);
  margin: 0;
  padding: 0 5px;
  height: 6px;
  width: 100%;
  outline: none;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none !important
  border-radius: 1000px;
  box-shadow: none;
  background-color: white;
  cursor: pointer;
  width: 20px;
  height: 20px;

}

input[type=checkbox] {
  display: none;
  + label {
    cursor: pointer;
    color: light-grey;
    font-size: 14px;
    height: 100%;
    text-transform: uppercase;
    text-decoration: line-through;
    padding: 11px 5px;
    height: 100%;
  }
  &:checked {
    + label {
      color: red;
      text-decoration: none;
    }
  }
}


