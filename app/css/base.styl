

@viewport {
  width: extend-to-zoom 980px;
  min-zoom: 0.25;
  max-zoom: 5;
}

html, body {
  margin: 0;
  padding: 0;
}

* {
  box-sizing: border-box;
}

section {
  margin-bottom: column-gutter;
}

body {
  background-color: dark-blue;
}

header {
  background-color: blue;
  padding-top: 60px;
  padding-bottom: 60px;
  position: relative;
  h1 {
    text-align: center;
    span { display: none; }
    img {
      max-width: 960px;
    }
  }
  h2 {
    color: yellow;
  }

  .row {
    margin-bottom: 60px;
  }

  .scuba-dude {
    max-height: 320px;
    tranform-origin: 50% 400px;
    // animation: scuba-drift 4s ease alternate infinite;

    svg {
      animation: scuba-rock 8s linear alternate infinite;
      #dude {
        tranform-origin: 50% 400px;
        animation: scuba-bob 2s ease alternate infinite;
      }

      #SUIT,
      #HANDS {
        > * { fill: yellow; }
      }
    }
  }
}

main {
  position: relative;
  > * {
    position: relative;
    z-index: 3;
  }


  section {
    padding-top: 0px;
    padding-bottom: 60px;

    &.fader {
      opacity: 0;
      padding-top: 60px;
    }
    &.light {
      background-color: white;
      h2 { color: black; }
      p { color: black; }
    }
  }


  .gate {
    background-color: off-white;
    box-shadow: 0 -20px 0 white;
    content: '';
    top: 0;
    width: column-gutter;
    height: 100%;
    position: absolute;
    z-index: 2;

    &.left { left: 0; }
    &.right { right: 0; }

  }

}



.waterfall {
  width: 1000px;
  height: 1688px;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -500px;
  z-index: 1;
  svg {
    line {
      stroke: blue;
      stroke-width: 8;
    }
    #col1 { animation: waterfall 2s linear infinite; }
    #col2 { animation: waterfall 3s linear infinite; }
    #col3 { animation: waterfall 2s linear infinite; }
    #col4 { animation: waterfall 3s linear infinite; }
    #col5 { animation: waterfall 2s linear infinite; }
    #col6 { animation: waterfall 3s linear infinite; }
    #col7 { animation: waterfall 4s linear infinite; }
    #col8 { animation: waterfall 2s linear infinite; }
  }
}