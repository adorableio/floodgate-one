// --------------------------------------------------
// Generic styles
//

h1 {
  color: red;
  font-size: 48px;
}
h2 {
  color: red;
  font-size: 32px;
  line-height: 1.4;
  margin-bottom: .6em;
}

p.subtitle {
  color: rgba(black, .75);
  font-size: 24px;
}

a {
  color: aqua;
  text-decoration: none;
  transition: all .3s ease;
}

.button {
  background-color: button-background-color;
  color: button-font-color;
  box-shadow: 0 0 0 1px button-background-color;
  cursor: pointer;
  display: inline-block;
  padding: 15px 25px 16px;
  margin-bottom: 1em;
  margin-right: (column-gutter/2);

  &.invert {
    background-color: transparent;
    color: button-background-color;
    box-shadow: 0 0 0 1px button-background-color;
    &:hover {
      background-color: button-background-color;
      box-shadow: 0 0 0 1px button-background-color;
      color: button-font-color;
      text-decoration: none;
    }
  }

  &:hover {
    background-color: button-hover-background-color;
    box-shadow: 0 0 0 1px button-hover-background-color;
    color: button-hover-font-color;
    text-decoration: none;
  }
}

label {
  color: white;
  display: block;
  font-size: 14px;
  margin-bottom: .25em;
  text-transform: uppercase;

  span {
    color: white;
    font-size: 18px;
    text-transform: none;
    z-index: 300;
    position: relative;
  }
}

section {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  .row {
    clearfix();
  }

  h2.title {
    margin: 0;
    padding: 0;
    font-weight: 100;
  }
}

.container {
  display: inline-block;
  width: auto;
}


// --------------------------------------------------
// <field>-value flash animation things
//

flash(background-color, text-color) {
  background-color: background-color;
  color: text-color;
}

@-webkit-keyframes flash {
  0% { flash: white, white; }
  50% { flash: red, white; }
  100% { flash: rgba(red, 0), white; }
}

@-webkit-keyframes white-flash {
  0% { flash: white, white; }
  50% { flash: red, white; }
  100% { flash: white, red; }
}

addflash(name) {
  animation: name 600ms 1 ease-in;
  position: relative;
  z-index: 100;
}

[class*='-value'] {
  position: relative;
  padding: 0 5px;
  margin: 0 -5px
  .flash {
    addflash(flash);
  }
}


// --------------------------------------------------
// .navigation
//


#top,
#what,
#demo {
  display: block;
  position: relative;
  top: -70px;
  visibility: hidden;
}

.navigation {
  transition: all .4s ease-in;
  position: fixed;
  background: navigation-background-color;
  display: block;
  text-align: center;
  height: 70px;
  overflow: hidden;
  padding: 12px 0 0;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;


  .menu {
    inline-icon: 'menu';
    color: red;
    display: block;
    font-size: 1.6em;
    text-align: right;
    margin-right: 20px;
    span { display: none; }
  }

  ul {
    list-style-type: none;
    display: block;
    padding: 0;
    margin: 0;


    li {
      display: block;
      margin: 0;
      position: relative;
      bottom: 0;


      &:last-child { margin-right: 0; }
      [class^='icon-']:before {
        font-size: 36px;
        line-height: 1;
        height: 100%;
        position: relative;
        top: -2px;
        vertical-align: middle;
      }
      a {
        transition: box-shadow .2s ease;
        font-family: header-font;
        font-size: 18px;
        font-weight: 300;
        line-height: 64px;
        display: block;
        padding: 4px 15px 16px;
        color: navigation-link-color;
        box-shadow: inset 0 -2px 0 transparent;
        vertical-align: bottom;
        &:hover {
          background: navigation-link-hover-background-color;
          color: navigation-link-hover-color;
          box-shadow: inset 0 -4px 0 navigation-link-hover-border-color;
        }
      }
    }
  }

  @media medium-up {

    padding: 0 0.8em;
    height: 70px;

    .menu { display: none; }

    .navigation {
      height: 70px;
    }
    ul {
      display: block;
      height: 70px;
      opacity: 1;
      li {
        display: inline-block;
        height: 100%;
        position: relative;
        a {
          margin-top: 0;
          padding-top: 5px;
          height: 70px;
          i {
            display: inline-block;
          }
        }
      }
    }

  }
}

