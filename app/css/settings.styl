// Base font settings
base-font             = "ff-enzo-web", sans-serif;
base-line-height      = 1.8;
base-font-color       = black;
base-font-weight      = 400;
base-font-size        = 18px;
base-text-shadow      = none;

// Navigation
navigation-link-color                  = grey;
navigation-background-color            = rgba(white, 96%);
navigation-link-hover-background-color = transparent;
navigation-link-hover-color            = blue;
navigation-link-hover-border-color     = blue;

// Header font settings
header-font           = "alwyn-new-web", sans-serif;
header-font-color     = black;
header-transform      = none;
header-weight         = 500;
header-panel-background-color = black;
header-panel-font-color = white;

// Button
button-background-color = blue;
button-font-color = white;
button-hover-background-color = white;
button-hover-font-color = black;

// Code font settings
code-font             = "source-code-pro", monospace;
code-background-color = white;
code-fade-color       = light-purple;
code-font-color       = red;
code-font-size        = 14px;
code-font-weight      = 900;
code-line-height      = 1.4;
code-border           = 0 2px 0 0 white;
code-comment-color    = rgba(code-font-color, .5);

