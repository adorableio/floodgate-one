

// Brand colors
black        = #22262e;
white        = #fff;
off-white    = #f3f3f3;
grey         = #bababe;
light-grey   = #dadade;

aqua         = #6ed8d6;
dark-aqua    = #33aaac;
green        = #3cb878;
blue         = #4cabfa;
yellow       = #ffd161;
light-purple = #948fae;
purple       = #33364d;
red          = #d44e49;
